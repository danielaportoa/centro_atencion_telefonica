<%= form_with(model: [cliente, llamada], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :motivo %>
    <%= form.select :motivo, Llamada.motivos.keys, { prompt: "Selecciona un motivo" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :fecha %>
    <%= form.datetime_select :fecha, class: "form-control" %>
  </div>

  <%= form.submit "Registrar Llamada", class: "btn btn-primary" %>
<% end %>

